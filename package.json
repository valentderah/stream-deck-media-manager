{
    "scripts": {
        "build:helper:windows": "cd MediaManager/platforms/windows && build.bat",
        "build:helper:macos": "cd MediaManager/platforms/macos && chmod +x build.sh && ./build.sh",
        "build:helper": "npm run build:helper:windows",
        "build:ts": "rollup -c",
        "build": "npm run build:helper && npm run build:ts",
        "watch": "rollup -c -w --watch.onEnd=\"streamdeck restart ru.valentderah.current-media\"",
        "pack": "streamdeck pack ru.valentderah.current-media.sdPlugin",
        "validate": "streamdeck validate ru.valentderah.current-media.sdPlugin",
        "release": "npm run build && npm run pack"
    },
    "type": "module",
    "devDependencies": {
        "@elgato/cli": "^1.6.0",
        "@rollup/plugin-commonjs": "^28.0.0",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^15.2.2",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^12.1.0",
        "@tsconfig/node20": "^20.1.2",
        "@types/node": "~20.15.0",
        "rollup": "^4.0.2",
        "tslib": "^2.6.2",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "@elgato/streamdeck": "^2.0.0"
    }
}
